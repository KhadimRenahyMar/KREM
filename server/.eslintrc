{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", 4],
        "quotes":
        ["error",
            "single",
        { "avoidEscape": true, "allowTemplateLiterals": true }],
        "semi": ["error", "always"],
        "no-case-declarations": 0
    }
}
